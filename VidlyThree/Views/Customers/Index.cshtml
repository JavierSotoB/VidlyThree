@model IEnumerable<VidlyThree.Models.Customer>


@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@if (Model.Count() == 0) {
    <text>We don't have any customers yet.</text>
}
else {
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model) {
                <tr>
                    <td><a href="/Customers/Details/@customer.Id">@customer.Name</a></td>
                </tr>
            }
        </tbody>
    </table>
}