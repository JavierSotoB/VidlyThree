@model IEnumerable<VidlyThree.Models.Movie>

<h2>Movies</h2>

@if (Model.Count() == 0) {
    <text>We don't have any customers yet.</text>
}
else {
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movies in Model) {
                <tr>
                    <td><a href="/Customers/Movies/@movies.Id">@movies.Name</a></td>
                </tr>
            }
        </tbody>
    </table>
}